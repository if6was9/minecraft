#!/bin/bash


MINECRAFT_HOME=/minecraft

MINECRAFT_VERSION=1.11
MINECRAFT_JAR=${MINECRAFT_HOME}/minecraft_server.${MINECRAFT_VERSION}.jar


mkdir -p ${MINECRAFT_HOME}
mkdir -p ${MINECRAFT_HOME}/logs

cd ${MINECRAFT_HOME}

if [ ! -f "${MINECRAFT_JAR}" ]; then
wget https://s3.amazonaws.com/Minecraft.Download/versions/${MINECRAFT_VERSION}/minecraft_server.${MINECRAFT_VERSION}.jar -O ${MINECRAFT_JAR}

fi

pkill -ef minecraft_server

echo "eula=true" >${MINECRAFT_HOME}/eula.txt
nohup java -jar -Xmx1g -jar ${MINECRAFT_JAR} >${MINECRAFT_HOME}/logs/out.log 2>&1 &
